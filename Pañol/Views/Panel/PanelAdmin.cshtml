@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Panel de Administración</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Tu CSS -->
    <link href="@Url.Content("~/Content/panel.css")" rel="stylesheet" />
</head>
<body style="background-color: #2c3e50; color: white;">
    <!-- Saludo -->
    <div class="position-absolute top-0 start-0 m-3">
        <h5 class="text-white">
            👋 ¡Hola, @Session["Username"]!
        </h5>
    </div>

    <!-- Botón cerrar sesión -->
    <div class="position-absolute top-0 end-0 m-3">
        <a href="@Url.Action("Logout", "Usuarios")" class="btn btn-outline-danger">
            <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión
        </a>
    </div>

    <!-- Contenido principal -->
    <div class="container text-center d-flex flex-column justify-content-center align-items-center vh-100">
        <h1 class="mb-5 text-white fw-bold">Panel de Administración</h1>

        <div class="row w-100 justify-content-center g-4">
            <div class="col-12 col-md-6 col-lg-4">
                <a href="@Url.Action("Index", "Usuarios")" class="btn btn-outline-primary btn-lg w-100">Administrar Usuarios</a>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <a href="@Url.Action("Index", "Profesores")" class="btn btn-outline-success btn-lg w-100">Administrar Profesores</a>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <a href="@Url.Action("Index", "Items")" class="btn btn-outline-warning btn-lg w-100">Administrar Ítems</a>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <a href="@Url.Action("Index", "Prestamos")" class="btn btn-outline-info btn-lg w-100">Administrar Préstamos</a>
            </div>
            <div class="col-12 col-md-6 col-lg-4">
                <a href="#" class="btn btn-outline-light btn-lg w-100">Estadísticas</a>
            </div>
        </div>
    </div>
</body>
</html>