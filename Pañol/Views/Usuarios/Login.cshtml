@model Pañol.Models.Usuario

@{
    ViewBag.Title = "Bienvenido Sistema Pañol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Iniciar sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons (opcional para íconos) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(to bottom right, #2c3e50, #34495e);
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        .card {
            background-color: #ffffff0d; /* blanco con transparencia */
            border: none;
            backdrop-filter: blur(8px);
            -webkit-backdrop-filter: blur(8px);
            color: white;
        }

        .form-control {
            background-color: #ffffff1a;
            border: none;
            color: white;
        }

            .form-control::placeholder {
                color: #ccc;
            }

            .form-control:focus {
                background-color: #ffffff2a;
                color: white;
                box-shadow: none;
                border-color: #66afe9;
            }

        .btn-primary {
            background-color: #2980b9;
            border: none;
        }

            .btn-primary:hover {
                background-color: #3498db;
            }

        h1 {
            font-size: 3rem;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="d-flex flex-column justify-content-center align-items-center vh-100 text-center">
        <h1 class="mb-4">S.G.P.2025</h1>

        @using (Html.BeginForm("Login", "Usuarios", FormMethod.Post))
        {
            <div class="card shadow p-4 w-100" style="max-width: 400px; border-radius: 1rem;">
                <h3 class="mb-4"><i class="bi bi-box-arrow-in-right me-2"></i>Iniciar sesión</h3>

                <div class="form-group mb-3 text-start">
                    <label for="Username" class="form-label">Usuario</label>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Ingresá tu usuario", @autocomplete = "username" })
                </div>

                <div class="form-group mb-4 text-start">
                    <label for="Password" class="form-label">Contraseña</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Ingresá tu contraseña", @autocomplete = "current-password" })
                </div>

                <button type="submit" class="btn btn-primary w-100">Ingresar</button>

                <div class="text-center mt-3">
                    <small class="text-white-50">¿Olvidaste tu contraseña?</small>
                </div>
            </div>
        }
    </div>
</body>
</html>
